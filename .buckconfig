[cache]
  mode = dir

[cxx]
  default_platform = iphonesimulator-x86_64
  cflags = -g -std=c11
  cxxflags = -g -std=c++14
  combined_preprocess_and_compile = true

[alias]
  sbjson-ios = //:SBJson#default,static

[apple]
  iphonesimulator_target_sdk_version = 7.0
  iphoneos_target_sdk_version = 7.0
  macosx_target_sdk_version = 10.9
  xctool_path = /usr/local/bin/xctool
  xctool_default_destination_specifier = platform=iOS Simulator

[project]
  ide = xcode
  ignore = .buckd, \
           .hg, \
           .git, \
           buck-cache, \
           buck-out

